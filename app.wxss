/**app.wxss**/
.container {
  padding: 20rpx;
  background-color: rgb(248, 247, 245);
}

.clearfix{
  zoom: 1;
}

.clearfix::after{
  content: "";
  display: block;
  clear: both;
}

.copyright{
  width: 100%;
  height: 120rpx;
  position: absolute;
  bottom: 120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #dddddd;
  font-size: 50rpx;
  font-weight: bold;
}

.conceal-border{
  border: none;
}

.red{
  background-color: #fadbd9;
  border: #fadbd9 1rpx solid;
  color: #de5046;
}

.orange{
  background-color: #fde7d2;
  border: #fde7d2 1rpx solid;
  color: #ef7c21;
}

.yellow{
  background-color: #fef1ce;
  border: #fef1ce 1rpx solid;
  color: #fbc31b;
}

.olive{
  background-color: #e7f4da;
  border: #e7f4da 1rpx solid;
  color: #a9da6b;
}

.green{
  background-color: #d7f0db;
  border: #d7f0db 1rpx solid;
  color: #45ae52;
}

.cyan{
  background-color: #d3f1f1;
  border: #d3f1f1 1rpx solid;
  color: #41c0bb;
}

.blue{
  background-color: #cce6ff;
  border: #cce6ff 1rpx solid;
  color: #4f9ce1;
}

.grey{
  background-color: #e7ebee;
  border: #e7ebee 1rpx solid;
  color: #899aa2;
}


.loading{
  position: absolute;
  top: 0;
  bottom: 120rpx;
  width: 100%;
  z-index: 20;
  display: flex;
  align-items: center;
  justify-content: center;
}

.loading-img-outer{
  padding: 40rpx;
  background-color: rgba(48, 48, 48, 0.404);
  border: rgba(48, 48, 48, 0) 1rpx solid;
  border-radius: 25rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: rgb(233, 233, 233);
  font-size: 26rpx;
}

.loading-img{
  height: 200rpx;
  width: 200rpx;
  margin-bottom: 20rpx;
}