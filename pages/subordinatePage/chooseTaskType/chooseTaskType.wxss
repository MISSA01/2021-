/* pages/chooseTaskType/chooseTaskType.wxss */
Page{
  height: 100%;
}

.choose-main{
  height: 100%;
  background-color: rgb(0, 0, 0, .5);
  position: relative;
}

.choose-type{
  width: 100%;
  display: flex;
  flex-direction: column;
  position: fixed;
  bottom: 200rpx;
  /* justify-content: center; */
}

.task-type{
  width: 40%;
  display: flex;
  margin: 10rpx auto;
}

.type-img{
  height: 120rpx;
  width: 120rpx;
  margin-right: 50rpx;
}

.type-text{
  color: rgb(207, 218, 228);
  font-weight: bold;
  font-size: 32rpx;
  line-height: 120rpx;
}

.choose-exit{
  width: 100%;
  display: flex;
  position: fixed;
  justify-content: center;
  bottom: 32rpx;
}

.close-img{
  height: 100rpx;
  width: 100rpx;
}