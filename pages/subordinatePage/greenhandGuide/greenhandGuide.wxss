page{
  height: 100%;
}

.guide-main{
  height: 100%;
}

.swiper-view {
  height: 100%;
  position: relative;
}

.swiper-box {
  height: 100%;
}

.swiper-item-view {
  height: 100%;
  zoom: 1;
  box-sizing: border-box;
}

.swiper-item-view:after {
  display: table;
  content: "";
  clear: both;
}

.swiper-image {
  margin: 10rpx 0;
  overflow: hidden;
  height: 94%;
  transition: transform 500ms;
  transform: scale(0.95, 0.9);
  border-radius: 8px;
  box-shadow: 0px 6px 20px 0px rgb(207, 207, 207);
}

.swiper-image.active {
  transform: scale(1, 1);
}

.swiper-dots-view {
  height: 18rpx;
  width: 100%;
  position: absolute;
  left: 0;
  bottom: 30rpx;
  display: flex;
  justify-content: center;
}

.swiper-dot {
  width: 6px;
  height: 6px;
  margin: 0 3px;
  border-radius: 3px;
  background-color: rgba(117, 117, 117, 0.418);
}

.swiper-dot.active {
  width: 15px;
  background-color: rgb(221, 65, 3);
}