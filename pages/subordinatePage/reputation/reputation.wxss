/* pages/subordinatePage/reputation/reputation.wxss */
page{
  height: 100%;
}

.reputation-main{
  height: 100%;
  width: 100%;
  background-color: rgb(241, 250, 255);
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 15rpx 30rpx;
  box-sizing: border-box;
}

.medal-outer{
  flex: 1;
  height: 260rpx;
  width: 260rpx;
  position: relative;
}

.medal-img{
  height: 260rpx;
  width: 260rpx;
}

.reputation-num{
  color: white;
  width: 260rpx;
  font-size: 48rpx;
  font-weight: bold;
  display: flex;
  justify-content: center;
  position: absolute;
  top: 135rpx;
}

.reputation-des{
  flex: 3;
  width: 100%;
  background-color: rgba(0, 0, 0, .2);
  display: flex;
  flex-direction: column;
  border: rgba(255, 255, 255, 0.5) 1rpx solid;
  border-radius: 10rpx;
}

.des-buttons{
  display: flex;
  justify-content: center;
  padding: 15rpx 40rpx;
}

.des-button{
  flex: 1;
  font-size: 34rpx;
  font-weight: bold;
  color: rgb(102, 102, 102);
  display: flex;
  justify-content: center;
  padding: 10rpx 0;
  background-color: rgba(255, 255, 255, 0);
  border: rgba(255, 255, 255, 0.6) 5rpx solid;
}

.button-active{
  background-color: rgb(252, 246, 229);
  border: rgba(255, 255, 255, 0.6) 5rpx solid;
}

.right-button{
  border-top-right-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  border-left: none;
}

.left-botton{
  border-top-left-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
  border-right: none;
}

.summary-title{
  font-size: 28rpx;
  /* font-weight: bold; */
  color: rgb(241, 241, 241);
  display: flex;
  justify-content: center;
  padding: 6rpx 0;
  background-image: linear-gradient(to right, rgba(109, 109, 109, 0.3) 0%, rgba(0,0,0,.7) 50%, rgba(109, 109, 109, 0.3) 100%);
}

.summary-content{
  display: flex;
  justify-content: center;
  padding: 30rpx 0;
  color: rgb(252, 252, 252);
}

.reputation-record{
  /* background-color: aliceblue; */
  padding: 0 16rpx;
  box-sizing: border-box;
}

.table-row{
  display: flex;
}

.table-title{
  display: flex;
  justify-content: center;
  padding: 25rpx 0;
}

.table-item{
  display: flex;
  justify-content: center;
  padding: 6rpx 0;
  font-size: 26rpx;
  box-sizing: border-box;
  margin: 0 4rpx;
  background-color: rgba(255, 255, 255, 0.6);
}

.record-time{
  flex: 3;
}

.record-variance{
  flex: 2;
}

.record-reason{
  flex: 3;
}