/* pages/subordinatePage/myTask/myTask.wxss */
page{
  height: 100%;
}

.my-task-main{
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  position: relative;
  background-image: linear-gradient(rgb(241, 250, 255), rgb(255, 255, 255));
}

.top-buttons{
  display: flex;
  justify-content: space-around;
  margin: 20rpx 30rpx;
}

.button-item{
  padding: 15rpx 40rpx;
  border: rgb(240, 240, 240) 1rpx solid;
  color: rgb(53, 53, 53);
  font-size: 28rpx;
  border-radius: 8rpx;
  background-color: rgb(252, 252, 252);
}

.active{
  border: rgb(174, 217, 224) 1rpx solid;
  color: rgb(255, 255, 255);
  background-color: rgb(174, 217, 224);
}

.task-list-outer{
  position: absolute;
  bottom: 0;
  top: 100rpx;
}

.task-list{
  padding: 0 30rpx;
  box-sizing: border-box;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.no-task{
  margin: 0 auto;
  margin-top: 120rpx;
  height: 480rpx;
  width: 480rpx;
}