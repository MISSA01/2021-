<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="pers.may.assist.mapper.AdviceMapper">

    <select id="selAllAdvice" resultType="User">
        select * from advice;
    </select>


    <insert id="insertNewAdvice" >
        insert into advice (adviceId,phoneNum,content,adviceDate)VALUES(default,#{phoneNum},#{content},#{adviceDate});
    </insert>





</mapper>