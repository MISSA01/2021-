/* custom-tab-bar/index.wxss */
.nav-tabs {
  width: 100%;
  display: flex;
  position: fixed;
  bottom: 0;
  border-top: white 1rpx solid;
  box-shadow: 0px 0px 30rpx rgba(184, 184, 184, 0.4);
  height: 120rpx;
}

.tab-list {
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column-reverse;
  background: #fcfcfc;
  position: relative;
  text-align: center;
  flex: 1;
  font-size: 28rpx;
}

.img-outer{
  position: relative;
}

.red-point{
  height: 20rpx;
  width: 20rpx;
  position: absolute;
  right: -5rpx;
  top: -5rpx;
}

.tab-text {
  font-size: 24rpx;
  line-height: 35rpx;
  color: #a8a8a8;
}

.iconPath {
  width:54rpx;
  height: 54rpx;
}

.default {
  color: rgb(228, 228, 228);
}

.active {
  font-weight: bold;
  color: #272727;
}

.active .tab-text {
  color: #272727;
}

.intermedia{
  font-size: 26rpx;
  color: #4e4e4e;
  font-weight: bold;
  background-color: #fcfcfc;
}

.add-task-outer{
  padding: 15rpx;
  padding-bottom: 0;
  box-sizing: border-box;
  background-color: white;
  border-top: white 1rpx solid;
  border-radius: 50rpx;
  box-shadow: 0 -10rpx 30rpx rgba(224, 224, 224, 0.4);
  margin-top: -40rpx;
}

.add-task{
  height: 80rpx;
  width: 80rpx;
  /* margin-top: -10rpx; */
}